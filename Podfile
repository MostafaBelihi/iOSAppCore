# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'iOSAppCore' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for My-Stocks
  # Infrastructure Pods (pods used for Infrastructure code)
  pod 'Alamofire', '~> 5.1'
  pod 'ReachabilitySwift', '~> 5.0'	# network connectivity checker

end
